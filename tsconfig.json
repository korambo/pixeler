{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@core/*": ["core/*"],
      "@effects/*": ["effects/*"],
      "@maps/*": ["maps/*"],
      "@objects/*": ["objects/*"],
      "@tools/*": ["tools/*"],
      "@geometry/*": ["geometry/*"]
    },
    "experimentalDecorators": true
  },
  "outDir": "./dist/",
  "noImplicitAny": true,
  "module": "es6",
  "target": "es5",
  "jsx": "react",
  "allowJs": true,
  "sourceMap": true,
  "moduleResolution": "node",
  "typeRoots": ["./global.d.ts"],
}
